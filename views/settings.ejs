<!DOCTYPE html>
<html lang="en">
<head>
  <title>Settings - OSM Helper</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Settings</h1>
    <h2>Age Cut-offs for Waiting List & Dashboard</h2>
    <form action="/update-cutoffs" method="post">
      <table style="width:auto; margin:20px 0;">
        <thead>
          <tr>
            <th>Category</th>
            <th>Years</th>
            <th>Months</th>
          </tr>
        </thead>
        <tbody>
          <% ['Squirrels', 'Beavers', 'Cubs', 'Scouts', 'Explorers'].forEach((cat, i) => { 
            const key = ['squirrels','beavers','cubs','scouts','explorers'][i];
            const { years, months } = displayCutoffs[key] || { years: 0, months: 0 };
          %>
            <tr>
              <td><%= cat %></td>
              <td><input type="number" name="<%= key %>_years" value="<%= years %>" min="0" style="width:60px;"></td>
              <td><input type="number" name="<%= key %>_months" value="<%= months %>" min="0" max="11" style="width:60px;"></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <button type="submit">Save Cut-offs</button>
    </form>

    <h2>Section Capacities & Visibility</h2>
    <form action="/update-sections" method="post">
      <table style="width:auto; margin:20px 0;">
        <thead>
          <tr>
            <th>Section</th>
            <th>Type</th>
            <th>Capacity (Default: <%= /* Display default */ %>)</th>
            <th>Show in Dashboard?</th>
          </tr>
        </thead>
        <tbody>
          <% displaySections.forEach(sec => { %>
            <tr>
              <td><%= sec.name %></td>
              <td><%= sec.type %></td>
              <td><input type="number" name="capacity_<%= sec.id %>" value="<%= sec.capacity %>" min="0" placeholder="<%= sec.defaultCapacity %>" style="width:80px;"></td>
              <td><input type="checkbox" name="visible_<%= sec.id %>" <%= sec.visible ? 'checked' : '' %>></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <button type="submit">Save Sections</button>
    </form>

    <a href="/" class="back-button"><button>Back to Dashboard</button></a>
  </div>
</body>
</html>
