<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Bank transfers Â· <%= groupName %></title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="container">
    <h1><%= groupName %></h1>
    <h2>Bank transfers</h2>
    <p style="opacity:.75;">Fetched at: <%= fetchedAt %></p>

    <table>
      <thead>
        <tr>
          <th>Account</th>
          <th>Date</th>
          <th>Reference</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <% (transfers || []).forEach(t => { %>
          <tr>
            <td><%= t.accountName %></td>
            <td><%= t.date %></td>
            <td><%= t.reference %></td>
            <td><%= t.amount %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
