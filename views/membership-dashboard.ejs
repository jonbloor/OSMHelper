<!DOCTYPE html>
<html lang="en">
<head>
  <title>Membership Dashboard - OSM Helper</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Membership Dashboard</h1>
    <p class="fetched-at">Data updated: <%= dataUpdated %></p>

    <button id="toggle-initials">Toggle Leader/YL Initials</button> <!-- New toggle -->

    <table>
      <thead>
        <tr>
          <th>Section Type</th>
          <th>Section Name</th>
          <th>Members</th>
          <th>Capacity</th>
          <th>Spaces</th>
          <th>Waiting</th>
          <th>Leaders</th>
          <th>Young Leaders</th>
        </tr>
      </thead>
      <tbody>
        <% for (const [type, data] of Object.entries(grouped)) { %>
          <% data.sections.forEach(sec => { %>
            <tr>
              <td><%= type %></td>
              <td><%= sec.name %></td>
              <td><%= sec.members %></td>
              <td><%= sec.capacity %></td>
              <td><%= sec.spaces %></td>
              <td><%= sec.waiting %></td>
              <td><%= sec.leaders %> (<span class="initials"><%= sec.leaderInitials %></span>)</td> <!-- Wrapped in span -->
              <td><%= sec.youngLeaders %> (<span class="initials"><%= sec.youngLeaderInitials %></span>)</td> <!-- Wrapped in span -->
            </tr>
          <% }); %>
          <tr class="subtotal">
            <td><%= type %> Subtotal</td>
            <td></td>
            <td><%= data.subtotalMembers %></td>
            <td><%= data.subtotalCapacity %></td>
            <td><%= data.subtotalSpaces %></td>
            <td><%= data.subtotalWaiting %></td>
            <td><%= data.subtotalLeaders %></td>
            <td><%= data.subtotalYLs %></td>
          </tr>
        <% } %>
        <tr class="subtotal"> <!-- Changed to "subtotal" for uniform styling -->
          <td><strong>Grand Total</strong></td>
          <td></td>
          <td><strong><%= totalMembers %></strong></td>
          <td><strong><%= totalCapacity %></strong></td>
          <td><strong><%= totalSpaces %></strong></td>
          <td><strong><%= totalWaiting %></strong></td>
          <td><strong><%= totalLeaders %></strong></td>
          <td><strong><%= totalYLs %></strong></td>
        </tr>
      </tbody>
    </table>

    <a href="/" class="back-button"><button>Back to Dashboard</button></a>
  </div>
  <script>
    // Toggle script
    document.getElementById('toggle-initials').addEventListener('click', () => {
      document.querySelectorAll('.initials').forEach(el => {
        el.style.display = el.style.display === 'none' ? 'inline' : 'none';
      });
    });
  </script>
</body>
</html>
