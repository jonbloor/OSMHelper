<!DOCTYPE html>
<html lang="en">
<head>
  <title>Add Equipment</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Add New Equipment</h1>
    <form action="/equipment/add" method="post">
      <label>List: <select name="listId" required>
        <option value="">Select List</option>
        <% lists.forEach(list => { %>
          <option value="<%= list.listid %>"><%= list.name %></option>
        <% }); %>
      </select></label><br>
      <label>Name: <input type="text" name="name" required></label><br>
      <label>Description: <input type="text" name="description"></label><br>
      <label>Location: <select name="location">
        <option value="">Select</option>
        <option value="Rack 1, Shelf 1">Rack 1, Shelf 1</option>
        <!-- Add more options -->
      </select></label><br>
      <label>Notes: <input type="text" name="notes"></label><br>
      <label>Condition: <select name="condition">
        <option value="">Select</option>
        <option value="Excellent">Excellent</option>
        <!-- Add others -->
      </select></label><br>
      <label>Quantity: <input type="number" name="quantity" min="1" value="1"></label><br>
      <label>Broken: <input type="text" name="broken"></label><br>
      <label>Purchase Date: <input type="date" name="purchaseDate"></label><br>
      <label>Renewal Price: <input type="text" name="renewalPrice"></label><br>
      <button type="submit">Add</button>
    </form>
    <a href="/equipment">Back to List</a>
  </div>
</body>
</html>
